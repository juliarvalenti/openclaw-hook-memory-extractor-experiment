{
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-haiku-4-5-20251001"
      },
    }
  },
  "messages": {
    "groupChat": {
      "mentionPatterns": ["agent-a"]
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "controlUi": {
      "dangerouslyAllowHostHeaderOriginFallback": true
    }
  },
  "plugins": {
    "entries": {
      "matrix": {
        "enabled": true
      }
    }
  },
  "channels": {
    "matrix": {
      "groupPolicy": "open",
      "groups": {
        "#agents:local": {
          "requireMention": true
        }
      }
    }
  }
}
